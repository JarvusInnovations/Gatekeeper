{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "identifier": "studio-reset",
            "label": "reset studio",
            "type": "shell",
            "command": "docker kill hab-studio-gatekeeper || true",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "identifier": "studio-launch",
            "label": "launch studio",
            "dependsOn": ["studio-reset"],
            "type": "process",
            "command": "hab",
            "args": [
                "studio",
                "-D",
                "enter"
            ],
            "options": {
                "env": {
                    "HAB_DOCKER_OPTS": "-p 7080:7080 -p 7092:7092 --name hab-studio-gatekeeper"
                }
            },
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "identifier": "studio-killall",
            "label": "kill all node processes within studio",
            "type": "shell",
            "command": "docker exec hab-studio-gatekeeper /entrypoint.sh run 'hab pkg exec core/busybox-static killall node' && sleep 2 || true",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "identifier": "studio-shell",
            "label": "new shell inside studio",
            "type": "shell",
            "command": "docker",
            "args": [
                "exec", "-it",
                "-w", "/src/site",
                "hab-studio-gatekeeper", "/entrypoint.sh", "run",
                "bash"
            ],
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "identifier": "studio-debug-project",
            "label": "run projection within studio",
            "dependsOn": ["studio-killall"],
            "type": "shell",
            "command": "docker",
            "args": [
                "exec", "-w", "/src/site", "-e", "DEBUG=1",
                "hab-studio-gatekeeper", "/entrypoint.sh", "run",
                "node --inspect=0.0.0.0:7092 --nolazy /src/hologit/bin/cli.js project site site"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
            },
            "isBackground": true,
            "group":{
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "javascript",
                "pattern": {
                    "regexp": "^(error|warning): (.*)$",
                    "severity": 1,
                    "message": 2
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\s*hab-studio:",
                    "endsPattern": "^\\s*Debugger listening on ws"
                }
            }
        },
        {
            "identifier": "studio-debug-export-tree",
            "label": "run export-tree within studio",
            "dependsOn": ["studio-killall"],
            "type": "shell",
            "command": "docker",
            "args": [
                "exec",
                "-w", "/src/site",
                "-e", "DEBUG=1",
                "-e", "GIT_WORK_TREE=/hab/cache/holo/src--.git--modules--site/site/compass",
                "-e", "GIT_INDEX_FILE=/hab/cache/holo/src--.git--modules--site/site/compass.index",
                "-e", "GIT_DIR=/src/.git/modules/site",
                "hab-studio-gatekeeper", "/entrypoint.sh", "run",
                "node --inspect=0.0.0.0:7092 --nolazy /src/hologit/bin/cli.js lens export-tree 7a62920e4b6a67a3258baf64b1966578b431a727"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
            },
            "isBackground": true,
            "group":{
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "javascript",
                "pattern": {
                    "regexp": "^(error|warning): (.*)$",
                    "severity": 1,
                    "message": 2
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\s*hab-studio:",
                    "endsPattern": "^\\s*Debugger listening on ws"
                }
            }
        },
    ]
}