{
    "version": "0.2.0",
    "configurations": [
        // {
        //     "type": "node",
        //     "request": "launch",
        //     "name": "Run AVA test",
        //     "program": "${workspaceFolder}/node_modules/ava/profile.js",
        //     "args": [
        //       "${file}"
        //     ],
        //     "skipFiles": [
        //         "<node_internals>/**/*.js"
        //     ]
        // },
        {
            "type": "node",
            "request": "launch",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],

            "env": {
                "DEBUG": "1"
            },
            "cwd": "${workspaceFolder}/site",

            "name": "project",
            "program": "${workspaceFolder}/hologit/bin/cli.js",
            "args": [
                "project",

                // holobranch
                "site",

                // target-branch
                "site"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],

            "env": {
                "DEBUG": "1"
            },
            "cwd": "${workspaceFolder}/site",

            "name": "watch",
            "program": "${workspaceFolder}/hologit/bin/cli.js",
            "args": [
                "watch"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],

            "env": {
                "DEBUG": "1"
            },
            "cwd": "${workspaceFolder}/site",

            "name": "add source",
            "program": "${workspaceFolder}/hologit/bin/cli.js",
            "args": [
                "source",
                "add",
                "skeleton-v1",
                "https://github.com/JarvusInnovations/emergence-skeleton.git"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],

            "env": {
                "DEBUG": "1"
            },
            "cwd": "${workspaceFolder}/site",

            "name": "checkout source",
            "program": "${workspaceFolder}/hologit/bin/cli.js",
            "args": [
                "source",
                "checkout",
                "skeleton-v1"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],

            "env": {
                "DEBUG": "1"
            },
            "cwd": "${workspaceFolder}/site",

            "name": "fetch source",
            "program": "${workspaceFolder}/hologit/bin/cli.js",
            "args": [
                "source",
                "fetch",
                "skeleton-v1"
            ]
        }
    ]
}